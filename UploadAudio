import React, { useState } from "react";
import { base44 } from "@/api/base44Client";
import { useQuery, useMutation, useQueryClient } from "@tanstack/react-query";
import { Button } from "@/components/ui/button";
import { Card, CardContent, CardHeader, CardTitle, CardDescription } from "@/components/ui/card";
import { Upload, Music, CheckCircle, Volume2 } from "lucide-react";
import { Alert, AlertDescription } from "@/components/ui/alert";

const AUDIO_SETTINGS = [
  { key: "classic_music", label: "Classic Mode Background Music", icon: Music, color: "emerald" },
  { key: "team_music", label: "Team Mode Background Music", icon: Music, color: "blue" },
  { key: "lobby_music", label: "Lobby Music", icon: Music, color: "purple" },
  { key: "correct_audio", label: "Correct Answer Sound", icon: Volume2, color: "green" },
  { key: "incorrect_audio", label: "Incorrect Answer Sound", icon: Volume2, color: "red" },
];

export default function UploadAudioPage() {
  const queryClient = useQueryClient();
  const [uploading, setUploading] = useState(null);
  const [uploadSuccess, setUploadSuccess] = useState(null);

  const { data: settings } = useQuery({
    queryKey: ['audio-settings'],
    queryFn: () => base44.entities.AppSettings.filter({ setting_category: "music" }),
    initialData: [],
  });

  const updateSettingMutation = useMutation({
    mutationFn: ({ id, data }) => base44.entities.AppSettings.update(id, data),
    onSuccess: () => {
      queryClient.invalidateQueries({ queryKey: ['audio-settings'] });
    },
  });

  const createSettingMutation = useMutation({
    mutationFn: (data) => base44.entities.AppSettings.create(data),
    onSuccess: () => {
      queryClient.invalidateQueries({ queryKey: ['audio-settings'] });
    },
  });

  const handleFileUpload = async (settingKey, file) => {
    if (!file) return;

    setUploading(settingKey);
    try {
      const { file_url } = await base44.integrations.Core.UploadFile({ file });

      const existingSetting = settings.find(s => s.setting_name === settingKey);

      if (existingSetting) {
        await updateSettingMutation.mutateAsync({
          id: existingSetting.id,
          data: { setting_value: file_url }
        });
      } else {
        await createSettingMutation.mutateAsync({
          setting_name: settingKey,
          setting_value: file_url,
          setting_category: "music"
        });
      }

      setUploadSuccess(settingKey);
      setTimeout(() => setUploadSuccess(null), 3000);
    } catch (error) {
      console.error("Upload failed:", error);
    }
    setUploading(null);
  };

  return (
    <div className="min-h-screen p-4 md:p-8">
      <div className="max-w-4xl mx-auto">
        <div className="text-center mb-8">
          <h1 className="text-4xl font-bold text-gray-800 mb-2">Upload Audio</h1>
          <p className="text-gray-600">Customize your game sounds and music</p>
        </div>

        <div className="grid gap-6">
          {AUDIO_SETTINGS.map((setting) => {
            const currentSetting = settings.find(s => s.setting_name === setting.key);
            const Icon = setting.icon;
            const isUploading = uploading === setting.key;
            const isSuccess = uploadSuccess === setting.key;

            return (
              <Card key={setting.key} className={`bg-white/90 backdrop-blur-sm border-2 border-${setting.color}-200 shadow-lg`}>
                <CardHeader>
                  <div className="flex items-center gap-4">
                    <div className={`w-12 h-12 bg-gradient-to-br from-${setting.color}-400 to-${setting.color}-600 rounded-xl flex items-center justify-center`}>
                      <Icon className="w-6 h-6 text-white" />
                    </div>
                    <div className="flex-1">
                      <CardTitle>{setting.label}</CardTitle>
                      {currentSetting && (
                        <CardDescription className="mt-1">Currently uploaded</CardDescription>
                      )}
                    </div>
                  </div>
                </CardHeader>
                <CardContent className="space-y-4">
                  {isSuccess && (
                    <Alert className={`bg-${setting.color}-50 border-${setting.color}-500`}>
                      <AlertDescription className={`flex items-center gap-2 text-${setting.color}-700`}>
                        <CheckCircle className="w-5 h-5" />
                        Audio uploaded successfully!
                      </AlertDescription>
                    </Alert>
                  )}

                  {currentSetting && (
                    <div className={`p-4 bg-${setting.color}-50 rounded-lg`}>
                      <audio controls className="w-full" src={currentSetting.setting_value} />
                    </div>
                  )}

                  <div className={`border-2 border-dashed border-${setting.color}-300 rounded-xl p-6 text-center hover:border-${setting.color}-500 transition-colors`}>
                    <input
                      type="file"
                      accept="audio/*"
                      onChange={(e) => handleFileUpload(setting.key, e.target.files[0])}
                      className="hidden"
                      id={`audio-${setting.key}`}
                      disabled={isUploading}
                    />
                    <label htmlFor={`audio-${setting.key}`} className="cursor-pointer">
                      <div className="flex flex-col items-center gap-3">
                        <div className={`w-12 h-12 bg-gradient-to-br from-${setting.color}-400 to-${setting.color}-500 rounded-full flex items-center justify-center`}>
                          <Upload className="w-6 h-6 text-white" />
                        </div>
                        <Button
                          type="button"
                          disabled={isUploading}
                          className={`bg-gradient-to-r from-${setting.color}-500 to-${setting.color}-600 text-white`}
                        >
                          {isUploading ? "Uploading..." : currentSetting ? "Replace Audio" : "Upload Audio"}
                        </Button>
                      </div>
                    </label>
                  </div>
                </CardContent>
              </Card>
            );
          })}
        </div>
      </div>
    </div>
  );
}
